@using Website.Models.Music;

@helper MusicPlayer(List<Track> tracks) {
    <section class="jp-playlist-player">
        <div class="jp-interface">
            <ul class="jp-controls">
                <li id="jplayer_play" class="jp-play"></li>
                <li id="jplayer_pause" class="jp-pause"></li>
                <li id="jplayer_stop" class="jp-stop"></li>
                <li id="jplayer_volume_min" class="jp-volume-min"></li>
                <li id="jplayer_volume_max" class="jp-volume-max"></li>
                <li id="jplayer_previous" class="jp-previous"></li>
                <li id="jplayer_next" class="jp-next"></li>
            </ul>
            <div class="jp-progress">
                <div id="jplayer_load_bar" class="jp-load-bar">
                    <div id="jplayer_play_bar" class="jp-play-bar"></div>
                </div>
            </div>
            <div id="jplayer_volume_bar" class="jp-volume-bar">
                <div id="jplayer_volume_bar_value" class="jp-volume-bar-value"></div>
            </div>
            <div id="jplayer_play_time" class="jp-play-time"></div>
            <div id="jplayer_total_time" class="jp-total-time"></div>
        </div>
        <div id="jplayer_playlist" class="jp-playlist">
            <ul>
                @foreach (var track in tracks)
                {
                    <li data-url="@track.Url" data-id="@track.Id">@track.ArtistName - @track.Name</li>
                }
            </ul>
        </div>
    </section>
}